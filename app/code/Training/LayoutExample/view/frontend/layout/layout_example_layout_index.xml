<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Layout Example by Rajtilak Pandey</title>
    </head>

    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="page_title" xsi:type="string">Nextjs Developer</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block name="layout_example"
                   class="Training\LayoutExample\Block\Layout\Index"
                   template="Training_LayoutExample::content.phtml"/>
        </referenceContainer>
    </body>
</page>
